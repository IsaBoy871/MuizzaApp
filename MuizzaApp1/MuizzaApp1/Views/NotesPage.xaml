<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuizzaApp1.Views.NotesPage"
             BackgroundColor="#f6e5cb">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="20,0"
              Margin="0,10"
              ColumnDefinitions="*,Auto">
            <Label Text="Notes" 
                   FontSize="24"
                   TextColor="#4a3831"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" 
                    Text="Done"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="#4a3831"
                    Clicked="OnDoneClicked"
                    Pressed="OnDonePressed"/>
        </Grid>

        <!-- Divider -->
        <BoxView Grid.Row="0"
                 HeightRequest="4"
                 Color="Black"
                 HorizontalOptions="Fill"
                 VerticalOptions="End"
                 Margin="0,5"/>

        <Image Grid.Row="1"
               Source="cat_note.png"
               HeightRequest="79"
               VerticalOptions="Start"
               Margin="0,-86,0,0"
               ZIndex="1"
               HorizontalOptions="Center" />

        <!-- Content -->
        <VerticalStackLayout Grid.Row="1" 
                            Padding="20,10">
            <Label Text="What's on your mind?"
                   FontSize="25"
                   TextColor="#4a3831"
                   Margin="55,20,0,10"/>
            <Editor x:Name="editor"
                    BackgroundColor="Transparent"
                    TextColor="#4a3831"
                    AutoSize="TextChanges"
                    FontSize="18"
                    FontFamily="etna"
                    Placeholder="Start writing here..."
                    PlaceholderColor="Grey"
                    Margin="15,0,0,0"
                    TextChanged="OnEditorTextChanged"/>
        </VerticalStackLayout>

        <!-- Navigation Bar -->
        <Frame Grid.Row="2" 
               CornerRadius="33" 
               Margin="-10,0,-10,-40" 
               BackgroundColor="White" 
               HeightRequest="100">
            <Grid ColumnDefinitions="*,*,*">
                <ImageButton Grid.Column="0" 
                            HeightRequest="50" 
                            WidthRequest="50" 
                            Source="quotes_icon"
                            Clicked="OnQuotesClicked" />
                <ImageButton Grid.Column="1" 
                            HeightRequest="35" 
                            WidthRequest="35" 
                            Command="{Binding NavigateToFavouritesPage}" 
                            Source="notes_icon" />
                <ImageButton Grid.Column="2" 
                            HeightRequest="50" 
                            WidthRequest="40" 
                            Command="{Binding NavigateToProfilePage}" 
                            Source="meditate_icon" />
            </Grid>
        </Frame>

        <!-- Selected Tab Indicator -->
        <Frame Grid.Row="2" 
               CornerRadius="33" 
               Margin="15" 
               BackgroundColor="#f6e5cb" 
               HeightRequest="95"
               WidthRequest="100">
            <ImageButton HeightRequest="65" 
                        WidthRequest="65" 
                        HorizontalOptions="Center"
                        Command="{Binding NavigateToNotesPage}" 
                        Source="notes_icon" />
        </Frame>
    </Grid>
</ContentPage> 