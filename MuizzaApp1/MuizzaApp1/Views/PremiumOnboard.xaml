<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuizzaApp1.Views.PremiumOnboard"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20,10"
          BackgroundColor="#FFF5EB">
          
        <!-- Header with Cancel Button -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
            <Image Source="muizza_title.png" 
                   HeightRequest="30"
                   HorizontalOptions="Start"/>
            <ImageButton Grid.Column="1"
                        Source="premium_cancel.png"
                        HeightRequest="24"
                        Clicked="OnCancelClicked"
                        BackgroundColor="Transparent"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">
                <!-- Decorative Elements -->
                <Grid>
                    <Image Source="deco1.png" 
                           HorizontalOptions="Start"
                           HeightRequest="40"/>
                    <Image Source="deco2.png" 
                           HorizontalOptions="End"
                           HeightRequest="40"/>
                </Grid>

                <!-- Premium Features -->
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="10">
                        <Image Source="prem_icon1.png" 
                               HeightRequest="30"/>
                        <VerticalStackLayout>
                            <Label Text="More Daily Searches"
                                   FontFamily="fredoka"
                                   FontSize="16"
                                   TextColor="#4A3831"/>
                            <Label Text="Understand your feelings and receive tailored advice"
                                   FontFamily="fredoka"
                                   FontSize="14"
                                   TextColor="#8B7E77"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Image Source="prem_icon2.png" 
                               HeightRequest="30"/>
                        <VerticalStackLayout>
                            <Label Text="Unlimited Mind Bank"
                                   FontFamily="fredoka"
                                   FontSize="16"
                                   TextColor="#4A3831"/>
                            <Label Text="Release your thoughts into your notepad without limit"
                                   FontFamily="fredoka"
                                   FontSize="14"
                                   TextColor="#8B7E77"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Label Text="&amp; MORE"
                           FontFamily="fredoka"
                           FontSize="16"
                           TextColor="#4A3831"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <!-- Cat Image -->
                <Image Source="prem_cat.png"
                       HeightRequest="120"
                       HorizontalOptions="Center"/>

                <!-- Subscription Options -->
                <Frame BackgroundColor="White"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="False"
                               Margin="0,10">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="1 month"
                                       TextColor="#4A3831"
                                       FontFamily="fredoka"
                                       VerticalOptions="Center"
                                       Grid.Column="0"/>
                                <Label Text="$6.99 / MO"
                                       TextColor="#4A3831"
                                       FontFamily="fredoka"
                                       VerticalOptions="Center"
                                       Grid.Column="1"/>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SelectMonthlySubscriptionCommand}"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <Frame BackgroundColor="#FFF5EB"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Label Text="SAVE 50%"
                                       TextColor="#FF9052"
                                       FontFamily="fredoka"
                                       FontSize="12"/>
                                <Label Grid.Column="1"
                                       Text="12 months"
                                       TextColor="#4A3831"
                                       FontFamily="fredoka"/>
                                <VerticalStackLayout Grid.Column="2">
                                    <Label Text="$3.49 / MO"
                                           TextColor="#4A3831"
                                           FontFamily="fredoka"/>
                                    <Label Text="$83.88 $41.94"
                                           TextColor="#8B7E77"
                                           FontFamily="fredoka"
                                           FontSize="12"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Trial Button -->
                <Button Text="3 DAY TRIAL"
                        BackgroundColor="White"
                        TextColor="#4A3831"
                        FontFamily="fredoka"
                        CornerRadius="10"
                        Margin="0,10,0,20"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage> 