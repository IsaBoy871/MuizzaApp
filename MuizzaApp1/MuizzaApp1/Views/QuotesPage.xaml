<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuizzaApp1.Views.QuotesPage"
             BackgroundColor="#f6e5cb">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top section -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="20,40,20,20">
            <Image Source="muizza_title.png"
                   HeightRequest="25"
                   Margin="0,0,0,10"
                   HorizontalOptions="Center"/>
            
            <Border BackgroundColor="White"
                    StrokeThickness="1"
                    Stroke="Black"
                    StrokeShape="RoundRectangle 25"
                    HeightRequest="45">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Grid.Column="0"
                           Source="search_icon.png"
                           HeightRequest="20"
                           Margin="15,0,5,0"/>
                    <Entry Grid.Column="1"
                           Placeholder="I am feeling?"
                           PlaceholderColor="Gray"
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           Margin="0,0,10,0"
                           Text="{Binding FeelingText}"/>
                </Grid>
            </Border>
            
            <Image Source="cat_search.png"
                   HeightRequest="70"
                   Margin="0,-10,0,0"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Emotion cards -->
        <ScrollView Grid.Row="1" Margin="20,0,20,100">
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto" 
                  RowSpacing="15" 
                  ColumnSpacing="15">
                
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="#FF6B6B"
                       CornerRadius="20"
                       HeightRequest="160">
                    <Grid>
                        <Image Source="angry.png"
                               Aspect="AspectFit"
                               HeightRequest="120"/>
                        <Label Text="Angry"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="#8B7BF7"
                       CornerRadius="20"
                       HeightRequest="160">
                    <Grid>
                        <Image Source="anxious.png"
                               Aspect="AspectFit"
                               HeightRequest="120"/>
                        <Label Text="Anxious"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="#7B9FF7"
                       CornerRadius="20"
                       HeightRequest="160">
                    <Grid>
                        <Image Source="bored.png"
                               Aspect="AspectFit"
                               HeightRequest="120"/>
                        <Label Text="Bored"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="#808080"
                       CornerRadius="20"
                       HeightRequest="160">
                    <Grid>
                        <Image Source="depressed.png"
                               Aspect="AspectFit"
                               HeightRequest="120"/>
                        <Label Text="Depressed"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="End"/>
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>

        <!-- Navigation bar -->
        <Frame Grid.Row="2" 
               VerticalOptions="End" 
               CornerRadius="33" 
               Margin="-10" 
               BackgroundColor="White" 
               HeightRequest="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.Shadow>
                    <Shadow Offset="10,10" Radius="30" Opacity="0.5" />
                </Grid.Shadow>
                <ImageButton Grid.Column="0" 
                            HeightRequest="50" 
                            WidthRequest="50" 
                            Source="quotes_icon"
                            Command="{Binding NavigateToQuotesPage}" />
                <ImageButton Grid.Column="1" 
                            HeightRequest="35" 
                            WidthRequest="35" 
                            Source="notes_icon"
                            Command="{Binding NavigateToNotesPage}" />
                <ImageButton Grid.Column="2" 
                            HeightRequest="50" 
                            WidthRequest="40" 
                            Source="meditate_icon"
                            Command="{Binding NavigateToBrainPage}" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
