<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MuizzaApp1.QuotesPage">

    <Grid BackgroundColor="{StaticResource Secondary}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        

        <!--<Grid Margin="0,4,0,0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Image
         Grid.Row="0"
         Source="meditate_splash.png"
         SemanticProperties.Description="Cute cat being held by their owner"
         HeightRequest="150"
         HorizontalOptions="Center" />
        </Grid>-->

        <Ellipse MinimumHeightRequest="900" HeightRequest="960" WidthRequest="3500" Margin="0,0,0,-150" Fill="white" Grid.Row="1" HorizontalOptions="FillAndExpand" />
        <Ellipse/>

        <Grid Margin="0,110,0,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,-172,0,0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image
                 Grid.Row="0"
                Source="loading_bar3.png"
                SemanticProperties.Description="Cute cat being held by their owner"
                HeightRequest="25"
                HorizontalOptions="Center" />
            </Grid>

            <Label TextColor="#4f3422"
                   Text="I am just a test quote. To show what it looks like."
                   FontSize="26"
                   Margin="32,-1207,32,32"
                   HeightRequest="70"
                   FontFamily="fredoka"
                   HorizontalTextAlignment="Center"/>

            <Button Grid.Row="1"
                x:Name="GetStartedBtn"
                Text=">"
                FontSize="26"
                Margin="162,16,162,32"
                HeightRequest="70"
                Command="{x:Binding Path=NavigateCommand}"
                CornerRadius="20"
                VerticalOptions="End"
                FontFamily="fredoka"
                SemanticProperties.Hint="Loads into the app"
                HorizontalOptions="FillAndExpand" >
                <Button.Shadow>
                    <Shadow Brush="Gray"
                    Offset="00,20"
                    Radius="20"
                    Opacity="0.7" />
                </Button.Shadow>
            </Button>



        </Grid>
    </Grid>
</ContentPage>
