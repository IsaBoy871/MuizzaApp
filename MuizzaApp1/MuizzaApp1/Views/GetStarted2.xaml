<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MuizzaApp1.GetStarted2">

    <Grid BackgroundColor="{StaticResource Secondary}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid Margin="0,192,0,0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
            Source="cat_book.png"
            SemanticProperties.Description="Cute cat being held by their owner"
            HeightRequest="420"
            HorizontalOptions="Center" />
        </Grid>

        <Grid Margin="0,-69,0,0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Image
         Grid.Row="0"
         Source="book_splash.png"
         SemanticProperties.Description="Cute cat being held by their owner"
         HeightRequest="400"
         HorizontalOptions="Center" />
        </Grid>

        <Ellipse MinimumHeightRequest="900" HeightRequest="960" WidthRequest="1200" Margin="0,0,0,-500" Fill="white" Grid.Row="1" HorizontalOptions="FillAndExpand" />

        <!--<HorizontalStackLayout Grid.Row="1" VerticalOptions="Start" TranslationY="40" HorizontalOptions="Center" >
            <Ellipse HeightRequest="10" Margin="2" WidthRequest="10" Fill="orange"/>
            <Ellipse HeightRequest="10" Margin="2" WidthRequest="10" Fill="{StaticResource Tertiary}"/>
            <Ellipse HeightRequest="10" Margin="2" WidthRequest="10" Fill="{StaticResource Tertiary}"/>
        </HorizontalStackLayout>-->
        <Ellipse/>

        <Grid Margin="0,110,0,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--<VerticalStackLayout Background="White" Grid.Row="0">
                <Label HorizontalOptions="Center" Margin="0,16,0,0" FontFamily="PoetsenOne" FontSize="26" Grid.Row="1" Text="Adopt a Friend" />
                <Label HorizontalOptions="Center" Margin="0,8,0,0" FontFamily="RobotoRegular" FontSize="Default" TextColor="{StaticResource FontSecondary}" Text="Adopt the cutest pet as" />
                <Label HorizontalOptions="Center" Margin="0" FontFamily="RobotoRegular" FontSize="Default" TextColor="{StaticResource FontSecondary}" Text="your playmate" />
            </VerticalStackLayout>-->

            <Grid Margin="0,-172,0,0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image
                 Grid.Row="0"
                Source="loading_bar2.png"
                SemanticProperties.Description="Cute cat being held by their owner"
                HeightRequest="25"
                HorizontalOptions="Center" />
            </Grid>

            <Label TextColor="#4f3422"
                   Text="A Space To Express What's
                   On Your Mind"
                   FontSize="26"
                   Margin="32,-107,32,32"
                   HeightRequest="70"
                   FontFamily="fredoka"
                   HorizontalTextAlignment="Center"/>

            <Button Grid.Row="1"
                x:Name="GetStartedBtn"
                Text=">"
                FontSize="26"
                Margin="162,16,162,32"
                HeightRequest="70"
                Command="{x:Binding Path=NavigateCommand}"
                CornerRadius="20"
                VerticalOptions="End"
                FontFamily="fredoka"
                SemanticProperties.Hint="Loads into the app"
                HorizontalOptions="FillAndExpand" >
                <Button.Shadow>
                    <Shadow Brush="Gray"
                    Offset="00,20"
                    Radius="20"
                    Opacity="0.7" />
                </Button.Shadow>
            </Button>



        </Grid>
    </Grid>
</ContentPage>
