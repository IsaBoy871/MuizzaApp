<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuizzaApp1.Views.BrainPage"
             BackgroundColor="#f6e5cb">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <ImageButton 
            Source="back_arrow.png"
            HeightRequest="24"
            WidthRequest="24"
            Margin="20,40,0,20"
            HorizontalOptions="Start"
            Clicked="OnBackButtonClicked"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">
                <!-- Header -->
                <Grid ColumnDefinitions="Auto,*" Margin="0,10">
                    <Image Grid.Column="0"
                           Source="ghost.png"
                           HeightRequest="40"
                           WidthRequest="40"/>
                    <Label Grid.Column="1"
                           Text="Hey, Isa"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#4f3422"
                           FontFamily="fredoka"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Affirmation Section -->
                <Label Text="What is your affirmation for the day?"
                       FontSize="18"
                       TextColor="#4f3422"
                       FontFamily="fredoka"/>
                <Frame BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15">
                    <Entry Placeholder="e.g. I'm freeing myself from all destructive doubt and fear"
                           PlaceholderColor="#BEBEBE"
                           TextColor="#4f3422"
                           FontFamily="etna"/>
                </Frame>

                <!-- Intention Section -->
                <Label Text="What is your intention of the day?"
                       FontSize="18"
                       TextColor="#4f3422"
                       FontFamily="fredoka"/>
                <Frame BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15">
                    <Entry Placeholder="e.g. To cultivate gratitude and appreciation for the present moment"
                           PlaceholderColor="#BEBEBE"
                           TextColor="#4f3422"
                           FontFamily="etna"/>
                </Frame>

                <!-- Gratitude Section -->
                <Label Text="What are your grateful for, today?"
                       FontSize="18"
                       TextColor="#4f3422"
                       FontFamily="fredoka"/>
                <Frame BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15">
                    <Entry Placeholder="e.g. I'm so grateful to be surrounded by people who fully love and support me"
                           PlaceholderColor="#BEBEBE"
                           TextColor="#4f3422"
                           FontFamily="etna"/>
                </Frame>

                <!-- Footer with Timer -->
                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Frame BackgroundColor="#FFA07A"
                           BorderColor="Transparent"
                           CornerRadius="25"
                           HeightRequest="50"
                           WidthRequest="50"
                           Padding="0">
                        <Image Source="pawprint.png"
                               HeightRequest="30"
                               WidthRequest="30"/>
                    </Frame>
                    <Label Text="Resets at 00:00"
                           FontSize="14"
                           TextColor="#4f3422"
                           FontFamily="fredoka"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Frame  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="End" CornerRadius="33" Margin="-10" BackgroundColor="White" HeightRequest="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.Shadow>
                    <Shadow Offset="10,10" Radius="30" Opacity="0.5" />
                </Grid.Shadow>
                <ImageButton Grid.Column="0" HeightRequest="50" WidthRequest="50" Source="quotes_icon" />
                <ImageButton Grid.Column="1" HeightRequest="35" WidthRequest="35" Command="{Binding NavigateToFavouritesPage}" Source="notes_icon" />
                <ImageButton Grid.Column="2" HeightRequest="50" WidthRequest="40" Command="{Binding NavigateToBrainPage}" Source="meditate_icon" />
            </Grid>
        </Frame>

        <Frame  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="End" CornerRadius="33" Margin="15" BackgroundColor="#f6e5cb" HeightRequest="95" WidthRequest="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ImageButton Grid.Column="1" 
                    HeightRequest="65" 
                    WidthRequest="65" 
                    Command="{Binding NavigateToNotesPage}" 
                    Source="notes_icon" />
            </Grid>
        </Frame>
        
    </Grid>
</ContentPage> 