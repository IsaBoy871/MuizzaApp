<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MuizzaApp1.MainPage">

    <Grid BackgroundColor="{StaticResource Secondary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cat Image Section -->
        <Image Grid.Row="0"
               Source="cat_quotes.png"
               SemanticProperties.Description="Cute cat being held by their owner"
               HeightRequest="400"
               HorizontalOptions="Center"
               Margin="0,152,0,0"/>

        <!-- Quotes Splash Image -->
        <Image Grid.Row="0"
               Source="quotes_splash.png"
               SemanticProperties.Description="Quotes splash image"
               HeightRequest="400"
               HorizontalOptions="Center"
               Margin="0,-139,0,0"/>

        <!-- Background Ellipse -->
        <Ellipse Grid.Row="1"
                 Fill="White"
                 MinimumHeightRequest="900"
                 HeightRequest="900"
                 WidthRequest="1200"
                 Margin="0,0,0,-500"
                 HorizontalOptions="FillAndExpand"/>

        <!-- Content Section -->
        <Grid Grid.Row="1" 
              Margin="0,110,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Loading Bar -->
            <Image Grid.Row="0"
                   Source="loading_bar1.png"
                   SemanticProperties.Description="Loading bar indicator"
                   HeightRequest="25"
                   HorizontalOptions="Center"
                   Margin="0,-112,0,0"/>

            <!-- Main Text -->
            <Label Grid.Row="0"
                   Text="Start Your Day With Affirmations, Gratitude...."
                   TextColor="#4f3422"
                   FontSize="26"
                   FontFamily="fredoka"
                   HorizontalTextAlignment="Center"
                   Margin="32,-46,32,32"
                   HeightRequest="70"/>

            <!-- Get Started Button -->
            <Button Grid.Row="1"
                    x:Name="GetStartedBtn"
                    Text="Get Started"
                    Command="{Binding NavigateCommand}"
                    FontFamily="fredoka"
                    FontSize="26"
                    CornerRadius="20"
                    HeightRequest="70"
                    Margin="32,16,32,32"
                    VerticalOptions="End"
                    HorizontalOptions="Fill"
                    SemanticProperties.Hint="Loads into the app">
                <Button.Shadow>
                    <Shadow Brush="Gray"
                            Offset="0,20"
                            Radius="20"
                            Opacity="0.7"/>
                </Button.Shadow>
            </Button>
        </Grid>
    </Grid>
</ContentPage>
